<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Using a consistent theme allows us to change colors of buttons etc. collectively -->
    <!-- For now only the colorPrimary was relevant which is set to mg_vandyke, rest can be altered later -->
    <!-- newly created items will have these colors -->

    <!-- Base application theme. -->
    <style name="Base.Theme.MovieRecommender" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--         Primary "brand color"     -->
        <item name="colorPrimary">@color/mg_vandyke</item>
        <item name="colorPrimaryVariant">@color/mg_rose</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary "brand color"-->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize theme here -->
    </style>

    <!-- Seperate styles can be created if not all thing should be covered by one single theme
    <style name ="basic_button_styling">
        <item name="backgroundTint">@color/mg_vandyke</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
